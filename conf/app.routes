# microservice specific routes

GET        /language/:language        uk.gov.hmrc.language.ChangeLanguageEndpoint.switchTo(language: String)

GET        /start                     uk.gov.hmrc.personaldetailsvalidation.endpoints.PersonalDetailsValidationStartController.start(completionUrl: CompletionUrl)

GET        /personal-details          uk.gov.hmrc.personaldetailsvalidation.endpoints.PersonalDetailsCollectionController.showPage(completionUrl: CompletionUrl, postcodeVersion: Boolean ?= false)
POST       /personal-details          uk.gov.hmrc.personaldetailsvalidation.endpoints.PersonalDetailsCollectionController.submit(completionUrl: CompletionUrl, postcodeVersion: Boolean ?= false)

GET         /assets/*file             controllers.Assets.at(path="/public", file)
